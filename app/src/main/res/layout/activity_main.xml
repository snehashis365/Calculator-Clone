<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/displayColor"
    android:orientation="vertical"
    android:forceDarkAllowed="false"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="About"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_info" />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="Menu"
            android:focusable="true"
            android:hapticFeedbackEnabled="true"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/inputField"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:fontFamily="@font/quicksand_medium"
            android:maxHeight="180sp"
            android:overScrollMode="always"
            android:scrollHorizontally="true"
            android:textAlignment="textEnd"
            android:textColor="@color/textColor"
            android:textIsSelectable="true"
            android:textSize="60sp"
            app:autoSizeMaxTextSize="64sp"
            app:autoSizeMinTextSize="32sp"
            app:autoSizeTextType="uniform"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/outputField"
            android:layout_width="match_parent"
            android:layout_height="120sp"
            android:fontFamily="@font/quicksand_medium"
            android:textAlignment="textEnd"
            android:textIsSelectable="true"
            android:textSize="54sp"
            app:autoSizeMaxTextSize="54sp"
            app:autoSizeMinTextSize="28sp"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:cardBackgroundColor="@color/cardColor"
        app:cardCornerRadius="4dp"
        app:cardElevation="20dp"
        app:cardMaxElevation="20dp">

        <LinearLayout
            android:id="@+id/inputPad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <LinearLayout
                android:id="@+id/numPad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/row3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_7"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="7"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_8"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="8"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_9"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="9"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_4"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="4"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_5"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="5"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_6"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="6"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_1"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="1"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_2"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="2"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_3"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="3"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_0"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="0"
                        android:textColor="@color/textColor"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_dec"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="."
                        android:textColor="@color/textColor"
                        android:textSize="32sp" />

                    <TextView
                        android:id="@+id/btn_expo"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="^"
                        android:textColor="@color/blue_500"
                        android:textSize="28sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dividerV"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/darker_gray"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/actionPad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/row5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_div"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="รท"
                        android:textColor="@color/blue_500"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_aclr"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:fontFamily="@font/quicksand_medium"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="C"
                        android:textColor="@color/blue_500"
                        android:textSize="30sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/btn_del"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:hapticFeedbackEnabled="true"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        app:srcCompat="@drawable/ic_backspace" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_mul"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="ร"
                        android:textColor="@color/blue_500"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_lb"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="("
                        android:textColor="@color/blue_500"
                        android:textSize="28sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_sub"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="-"
                        android:textColor="@color/blue_500"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_rb"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text=")"
                        android:textColor="@color/blue_500"
                        android:textSize="28sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_add"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="+"
                        android:textColor="@color/blue_500"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/btn_eq"
                        android:layout_width="0dp"
                        android:layout_height="90sp"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/quicksand"
                        android:gravity="center"
                        android:hapticFeedbackEnabled="true"
                        android:text="="
                        android:textColor="@color/blue_500"
                        android:textSize="36sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>